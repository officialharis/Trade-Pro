# Database
MONGODB_URI=mongodb+srv://username:password@cluster0.xxxxx.mongodb.net/tradepro?retryWrites=true&w=majority&appName=Cluster0

# JWT Secret
JWT_SECRET=your-super-secret-jwt-key-here-groww-2024

# Server
PORT=5000
NODE_ENV=production

# CORS
CORS_ORIGIN=https://your-vercel-app.vercel.app

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Email (for future features)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password

# File Upload (for future features)
MAX_FILE_SIZE=5242880
UPLOAD_PATH=./uploads

# Redis (for caching - optional)
REDIS_URL=redis://localhost:6379

# External APIs (for real market data - optional)
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_key
FINNHUB_API_KEY=your_finnhub_key

# Razorpay (Test Mode)
# You need to get these from your Razorpay Dashboard
# Go to https://dashboard.razorpay.com/app/keys to get your test keys
RAZORPAY_KEY_ID=rzp_test_your_key_id_here
RAZORPAY_KEY_SECRET=your_key_secret_here

# Frontend API URL (optional - defaults to same domain for Vercel)
VITE_API_URL=https://your-vercel-app.vercel.app/api
